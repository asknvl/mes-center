<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             x:Class="mes_center.Views.addstrategyView">
	<UserControl.Styles>
		<StyleInclude Source="/Views/Styles/WindowStyle.axaml" />
	</UserControl.Styles>	
	<Grid
		RowDefinitions="Auto, Auto, *, Auto"
		ColumnDefinitions="*, Auto, *"		
		MinHeight="300">
		<TextBlock
			Classes="TextBlock Title"
			Grid.ColumnSpan="3"
			HorizontalAlignment="Center"
			Margin="4">
			Добавить стратегию
		</TextBlock>
		<TextBox
			Text="{Binding Name}"
			Watermark="Название стратегии"
			Grid.Row="1"
			Grid.Column="0"
			Margin="2"/>
		<TextBlock			
			Grid.Row="1"
			Grid.Column="2"
			Margin="2"
			VerticalAlignment="Center">
			Этапы:
		</TextBlock>
		<ListBox
			Items="{Binding DestinationStages}"
			SelectedItem="{Binding DestinationStage}"
			Grid.Row="2"
			Grid.Column="0"
			Margin="2"
			Width="250"
			ScrollViewer.VerticalScrollBarVisibility="Auto">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock
					Text="{Binding name}">
					</TextBlock>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<StackPanel
			Orientation="Vertical"
			Grid.Row="2"
			Grid.Column="1"
			VerticalAlignment="Center">
			<Button
				Command="{Binding addCmd}"
				Background="Transparent"
				HorizontalAlignment="Center">
				<Svg					
					Path="/Assets/svg/left_arrow.svg"
					Height="30"
					Width="30">
				</Svg>
			</Button>
			<Button
				Command="{Binding removeCmd}"
				Background="Transparent"
				HorizontalAlignment="Center">
				<Svg
					Path="/Assets/svg/right_arrow.svg"
					Height="30"
					Width="30">
				</Svg>
			</Button>
		</StackPanel>
		<ListBox			
			Items="{Binding SourceStages}"
			SelectedItem="{Binding SourceStage}"
			Grid.Row="2"
			Grid.Column="2"	
			Width="250"
			ScrollViewer.VerticalScrollBarVisibility="Auto">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock
					Text="{Binding name}">
					</TextBlock>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<Grid.Styles>
			<Style Selector="Grid ListBox">
				<Setter Property="Margin" Value="2"/>
			</Style>
		</Grid.Styles>
		<Grid
			ColumnDefinitions="100, 100"			
			Grid.Row="3"
			Grid.Column="2"
			HorizontalAlignment="Right">
			<Button
				Command="{Binding okCmd}"
				IsEnabled="{Binding IsInputValid}"
				Grid.Column="0"
				HorizontalAlignment="Stretch">
				ОК
			</Button>
			<Button
				Command="{Binding cancelCmd}"
				Grid.Column="1"
				HorizontalAlignment="Stretch">
				Отмена
			</Button>
		</Grid>
	</Grid>
  
</UserControl>
