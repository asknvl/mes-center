<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="mes_center.Views.dialogs.containerDlg"
		xmlns:comvms="using:mes_center.ViewModels"
		xmlns:comviews="using:mes_center.Views"
		xmlns:dlgvms="using:mes_center.ViewModels.dialogs"
		xmlns:dlgviews="using:mes_center.Views.dialogs"
		SizeToContent="WidthAndHeight"
		CanResize="False"		
        Title="containerDlg">	
	<Grid>		
		<ContentControl Content="{Binding Content}">
			<ContentControl.DataTemplates>
				<DataTemplate DataType="{x:Type comvms:addstrategyVM}">
					<comviews:addstrategyView/>
				</DataTemplate>
				<DataTemplate DataType="{x:Type comvms:trashComponentsSelectVM}">
					<comviews:trashComponentsSelectView/>
				</DataTemplate>
				<DataTemplate DataType="{x:Type dlgvms:msgVM}">
					<dlgviews:msgView/>
				</DataTemplate>
			</ContentControl.DataTemplates>
		</ContentControl>
	</Grid>	
</Window>
