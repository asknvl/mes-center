<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:viewscommon="using:mes_center.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"				 
             x:Class="mes_center.Views.orderSelectionView">
	<UserControl.Styles>
		<StyleInclude Source="/Views/Styles/WindowStyle.axaml" />
	</UserControl.Styles>
	<Grid		
		RowDefinitions="Auto, *, Auto, Auto">
		<Grid
			Grid.Row="0"
			Height="40"
			Background="LightGray">
			<TextBlock
				Classes="TextBlock Title">
				Выберите задание и нажмите "Начать"
			</TextBlock>
		</Grid>
		<Grid
			Grid.Row="1">
			<viewscommon:ordersListView DataContext="{Binding Orders}"/>
		</Grid>

		<Grid
			Grid.Row="2"
			Height="45"
			ColumnDefinitions="*,*"
			Width="250"
			HorizontalAlignment="Right">
			<Button
				Command="{Binding selectOrderCmd}"
				Grid.Column="0"
				VerticalAlignment="Stretch"
				HorizontalAlignment="Stretch"
				VerticalContentAlignment="Center">
				Начать
			</Button>
			<Button
				Command="{Binding cancelCmd}"
				Grid.Column="1"
				VerticalAlignment="Stretch"
				HorizontalAlignment="Stretch"
				VerticalContentAlignment="Center">
				Выход
			</Button>
		</Grid>
		
	</Grid>    
</UserControl>
